<h1 class="text-center">Add your restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.input :phone_number %>
        <%= f.submit "add a restaurant", class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>

